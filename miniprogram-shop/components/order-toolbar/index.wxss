.buy-toolbar{
    display: flex;
    position:fixed;
    bottom:0;
    width:100%;
    height:120rpx;
    background:#fafafa;
    box-shadow: 0 0 20px #ccc;
    z-index:999999999;
    text-align: center;
    line-height: 1.2;
    color: #000;
    font-size: 12px;

}
.buy-toolbar i{ font-size: 60rpx}
.buy-toolbar .item{
    flex: 1 1;
    display: flex;
    align-items: center;
    justify-content: center;
}
.buy-toolbar .item-width-sm{
    flex: 0 0 120rpx;
}
